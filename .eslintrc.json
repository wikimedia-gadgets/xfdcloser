{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "$": "off",
        "mw": "off",
        "OO": "off",
        "importScript": "readonly",
        "importStylesheet": "readonly"
    },
    "overrides": [
        {
            "files": [
                "bin/*.js"
            ],
            "env": {
                "node": true
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "requireConfigFile": false,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "parser": "@babel/eslint-parser"
}